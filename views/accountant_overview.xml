<odoo>
    <record id="accountant_overview_kanban_view" model="ir.ui.view">
        <field name="name">accountant.journal.dashboard.kanban</field>
        <field name="model">accountant.overview</field>
        <field name="arch" type="xml">
            <kanban create="false">
                <field name="name"/>
                <field name="kanban_dashboard"/>
                <templates>
                    <t t-name="kanban-box">

                        <t t-value="JSON.parse(record.kanban_dashboard.raw_value)" t-set="dashboard"/>
                        <t t-value="record.name.raw_value)" t-set="name_type"/>
                        <div class="container o_kanban_card_content">
                            <div class="row">
                                <div class="col-4 text-left">
                                    <t t-if="(name_type == 'sale')" t-call="SaleOrder"/>
                                </div>
                            </div>


                        </div>


                    </t>
                    <t t-name="SaleOrder">
                        <div><t t-esc="dashboard.title"/></div>
                        <div>销售订单总额：<t t-esc="dashboard.sum_sale_order"/></div>
                        <div>销售订单数：<t t-esc="dashboard.sale_count"/></div>
                    </t>


                </templates>
            </kanban>
        </field>
    </record>

    <record id="open_accountant_overview_kanban" model="ir.actions.act_window">
        <field name="name">数据概览</field>
        <field name="res_model">accountant.overview</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,form</field>
        <field name="view_id" ref="accountant_overview_kanban_view"/>
        <field name="help" type="html">
            <p>
                数据展示<br/>
            </p>
        </field>
    </record>
    <menuitem id="main_accountant_menu" name="会计"/>
    <menuitem id="main_accountant_overview" name="概览" action="open_accountant_overview_kanban" parent="main_accountant_menu" sequence="1"/>
</odoo>
