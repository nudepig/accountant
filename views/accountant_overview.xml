<odoo>
    <record id="accountant_overview_kanban_view" model="ir.ui.view">
        <field name="name">accountant.journal.dashboard.kanban</field>
        <field name="model">accountant.overview</field>
        <field name="arch" type="xml">
            <kanban create="false">
                <field name="name"/>
                <field name="kanban_dashboard"/>
                <templates>
                    <t t-name="kanban-box">

                        <t t-value="JSON.parse(record.kanban_dashboard.raw_value)" t-set="dashboard"/>
                        <t t-value="record.name.raw_value" t-set="name_type"/>
                        <div class="container o_kanban_card_content" style="">
                            <div class="row">
                                <div class="col-11">
                                    <t t-if="(name_type == 'quotation')" t-call="quotation"/>
                                    <t t-if="(name_type == 'sale')" t-call="SaleOrder"/>
                                    <t t-if="(name_type == 'invoice')" t-call="invoice"/>
                                    <t t-if="(name_type == 'collection')" t-call="collection"/>
                                    <t t-if="(name_type == 'salesperson')" t-call="salesperson"/>
                                    <t t-if="(name_type == 'salesteam')" t-call="salesteam"/>
                                </div>
                            </div>
                        </div>
                    </t>
                    <t t-name="SaleOrder">
                        <div class="over_20"><t t-esc="dashboard.sale_title"/></div>
                        <div class="over_15">销售订单总额：<t t-esc="dashboard.sum_sale_order"/></div>
                        <div class="over_15">销售订单数：<t t-esc="dashboard.sale_count"/></div>
                    </t>
                    <t t-name="quotation">
                        <div class="over_20"><t t-esc="dashboard.title_quotation"/></div>
                        <div class="over_15">报价单总额：<t t-esc="dashboard.quotation_sum"/></div>
                        <div class="over_15">报价单数：<t t-esc="dashboard.quotation_count"/></div>
                    </t>
                    <t t-name="invoice">
                        <div class="over_20"><t t-esc="dashboard.invoice_title"/></div>
                        <div class="over_15">本月待开发票总额：<t t-esc="dashboard.invoice_sum"/></div>
                        <div class="over_15">本月待开发票单数：<t t-esc="dashboard.invoice_count"/></div>
                    </t>
                    <t t-name="collection">
                        <div class="over_20"><t t-esc="dashboard.collection_title"/></div>
                        <div class="over_15">本月回款总额：<t t-esc="dashboard.collection_sum"/></div>
                        <div class="over_15">本月回款单数：<t t-esc="dashboard.collection_count"/></div>
                    </t>
                    <t t-name="salesperson">
                        <div>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>销售员</th>
                                        <th>订单总额</th>
                                        <th>订单数</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="dashboard.salesperson_result" t-as="o">
                                        <td><span t-esc="o.name"/></td>
                                        <td><span t-esc="o.total"/></td>
                                        <td><span t-esc="o.count"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>

                    <t t-name="salesteam">
                        <div>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>销售团队</th>
                                        <th>订单总额</th>
                                        <th>订单数</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="dashboard.salesteam_result" t-as="o">
                                        <td><span t-esc="o.name"/></td>
                                        <td><span t-esc="o.total"/></td>
                                        <td><span t-esc="o.count"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>


                </templates>
            </kanban>
        </field>
    </record>

    <record id="open_accountant_overview_kanban" model="ir.actions.act_window">
        <field name="name">数据概览</field>
        <field name="res_model">accountant.overview</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,form</field>
        <field name="view_id" ref="accountant_overview_kanban_view"/>
        <field name="help" type="html">
            <p>
                数据展示<br/>
            </p>
        </field>
    </record>

</odoo>
