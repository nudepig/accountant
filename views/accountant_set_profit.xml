<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
                <record model="ir.actions.act_window" id="acton_accountant_set_profit">
            <field name="name">利润表设置</field>
            <field name="res_model">accountant.profit.set</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

<!--表单视图-->

        <record id="accountant_set_profit_view_form" model="ir.ui.view">
            <field name="name">利润表设置</field>
            <field name="model">accountant.profit.set</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                            <group col="4" colspan="2">
                                <field name="name"/>
                                <field name="company_id"/>
                            </group>
                            <group col="4" colspan="2">
                                <field name="amount_a"/>
                                <field name="amount_b"/>
                                <field name="amount_d"/>
                                <field name="amount_e"/>
                                <field name="amount_f"/>
                                <field name="amount_g"/>
                                <field name="amount_i"/>
                                <field name="amount_j"/>
                                <field name="amount_l"/>
                                <field name="amount_n"/>
                                <field name="amount_o"/>
                                <field name="amount_p"/>
                            </group>
                    </sheet>
                </form>
            </field>
        </record>

<!--自定义树状视图-->
        <record id="accountant_set_profit_view_tree" model="ir.ui.view">
            <field name="name">利润表设置</field>
            <field name="model">accountant.profit.set</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

     </data>
</odoo>