<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.actions.act_window" id="accountant_stock_move_action">
        <field name="name">按分类库存周转率</field>
        <field name="res_model">accountant.stock.move</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
           <p class="oe_view_accountant_create">创建第一个会计报表
           </p>
        </field>
    </record>

    <record id="stock_move_view_tree" model="ir.ui.view">
            <field name="name">按分类库存周转率</field>
            <field name="model">accountant.stock.move.line</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="company_id"/>
                    <field name="category"/>
                    <field name="stock_s"/>
                    <field name="stock_e"/>
                    <field name="stock_cost"/>
                    <field name="stock_rate" class="text-right"/>
                </tree>
            </field>
    </record>


     <record id="stock_rate_view_form" model="ir.ui.view">
            <field name="name">按分类库存周转率</field>
            <field name="model">accountant.stock.move</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="company_id" options="{'no_create': True, 'no_edit': True}"/>
                            </group>
                            <group>
                                <field name="startDate" editable='0' />
                                <field name="endDate"/>
                            </group>
                        </group>
                        <footer>
                            <button name="accountant_move_open_table" type="object" string="开始计算库存周转率" class='btn-primary' />
                        </footer>
                        <group>
                            <field name="line_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--自定义树状视图-->
        <record id="stock_rate_view_tree" model="ir.ui.view">
            <field name="name">报表</field>
            <field name="model">accountant.stock.move</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="company_id"/>
                    <field name="startDate"/>
                    <field name="endDate"/>
                </tree>
            </field>
        </record>

        <record id="accountant_stock_move_search" model="ir.ui.view">
            <field name="model">accountant.stock.move</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <field name="company_id" />
                    <filter name="company_id"
                        string="筛选云辅材公司"
                        domain="[('company_id','=',1)]" />

                    <filter name="company_id"
                        string="按公司分组"
                        context="{'group_by': 'company_id'}" />
                </search>
            </field>
        </record>



</odoo>

