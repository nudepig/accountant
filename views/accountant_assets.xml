                                    <td><field name="amount_bb"/></td>
                                    <td><field name="amount_y" /></td>
                                    <td><span>盈余公积</span></td>
                                    <td><field name="equity_c"/></td>
                                    <td><field name="amount_y" /></td>
                                </tr>
                                <tr>
                                    <td><span>其他非流动资产</span></td>
                                    <td><field name="amount_cc"/></td>
                                    <td><field name="amount_y" /></td>
                                    <td><span>未分配利润</span></td>
                                    <td><field name="equity_d"/></td>
                                    <td><field name="amount_y" /></td>
                                </tr>
